{% extends 'base.njk' %}
{% block styles %}
<style>
html {
  display: table;
  height: 100%;
  width: 100%;
}
body {
  display: table-cell;
  vertical-align: middle;
}
</style>
{% endblock %}
{% block content %}
<div class="signup-body col-sm-offset-3 col-md-6 panel" style="padding-right: 70px;">
<h1 {{dc}} style="text-align:center;">{{title}}</h1>
<form id="signup-form" method="POST" class="form-horizontal"><input type="hidden" name="_csrf" value="{{_csrf}}">
  <div class="form-group"><label for="email" class=" control-label"></label><br>
    <div class="col-sm-offset-3 col-sm-7"><input type="email" name="email" id="email" placeholder="Email" autofocus required class="form-control"></div>
  </div>
  <div class="form-group"><label for="password" class=" control-label"></label>
    <div class="col-sm-offset-3 col-sm-7"><input type="password" name="password" id="password" placeholder="Password" required class="form-control"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <button type="submit" class="btn btn-primary btn-block">Login</button>
      <button href="/admin/forgot" class="btn btn-link btn-block" style="text-align:center">Forgot your password?</button></div>
  </div>
 <div class="col-sm-offset-3 col-sm-7">
 <div class="divider">
    <div class="divider-content">OR</div>
  </div>
	  {% include "admin-includes/signup/_signup-social.njk" %}
	  <div class="login-footer" style="text-align:center;padding:20px">Don't have an account? <a href="/account/signup">Sign Up</a>
</div>
</div>
</form>
</div>
{% endblock %}
